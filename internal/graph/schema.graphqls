type Person {
  id: ID!
  name: String!
  father: Person
  mother: Person
}

type Query {
  persons: [Person!]!
}

input CreatePersonInput {
  name: String!
}

input UpdateParentInput {
  childId: ID!
  parentId: ID!
  parentType: String!
}

type Mutation {
  createPerson(input: CreatePersonInput!): Person!
  updateParent(input: UpdateParentInput!): ID!
}
